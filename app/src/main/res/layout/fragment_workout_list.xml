                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:layout_below="@id/btn_new_workout_tues"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_new_workout_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:layout_below="@id/tv_wednesday"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_edit_workout_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_below="@id/tv_wednesday"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:visibility="invisible"/>

            <CheckBox
                android:id="@+id/cb_rest_day_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest Day"
                android:layout_below="@id/tv_wednesday"
                android:layout_toRightOf="@id/btn_new_workout_wed"
                android:layout_marginLeft="32dp"/>

            <!--Thursday-->
            <TextView
                android:id="@+id/tv_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:layout_below="@id/btn_new_workout_wed"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_new_workout_thurs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:layout_below="@id/tv_thursday"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_edit_workout_thurs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
