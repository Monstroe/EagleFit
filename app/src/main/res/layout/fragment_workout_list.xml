                android:layout_below="@id/tv_friday"
                android:layout_toRightOf="@id/btn_new_workout_fri"
                android:layout_marginLeft="32dp"/>

            <!--Saturday-->
            <TextView
                android:id="@+id/tv_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:layout_below="@id/btn_new_workout_fri"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_new_workout_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:layout_below="@id/tv_saturday"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_edit_workout_sat"
                android:layout_width="wrap_content"
