<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main.WorkoutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/muscle_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="197dp"
            android:layout_height="655dp"
            android:contentDescription="@string/frImageDesc"
            android:src="@drawable/muscle_front_half"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="197dp"
            android:layout_height="655dp"
            android:contentDescription="@string/bImageDesc"
            android:src="@drawable/muscle_back_half"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="88dp"
            android:layout_height="86dp"
            android:rotation="270"
            android:text="@string/muscleChartLabel1"
            android:textColor="#FF3700B3"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="88dp"
            android:layout_height="86dp"
            android:rotation="-270"
            android:text="@string/muscleChartLabel2"
            android:textColor="#FF3700B3"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="729dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/PecButton"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="138dp"
            android:layout_marginTop="130dp"
            android:background="#00FF0000"
            android:text="Pec"
            android:textColor="#00FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/FShoulderButton"
            android:layout_width="25dp"
            android:layout_height="67dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="98dp"
            android:background="#00FF0000"
            android:rotation="50"
            android:text="Front Delts"
            android:textColor="#00FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BShoulderButton"
            android:layout_width="25dp"
            android:layout_height="67dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="110dp"
            android:background="#00FF0000"
            android:rotation="-50"
            android:text="Rear Delts"
            android:textColor="#00FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BicepButton"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="180dp"
            android:background="#00FF0000"
            android:rotation="-50"
            android:text="Bicep"
            android:textColor="#00FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <Button
            android:id="@+id/FForearmButton"
            android:layout_width="61dp"
            android:layout_height="32dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="235dp"
            android:background="#00FF0000"
            android:rotation="-60"
            android:text="ForearmFront"
            android:textColor="#00FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/AbsButton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="220dp"
            android:background="#00FF0000"
            android:rotation="90"
            android:text="abs"
            android:textColor="#00FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ObliqueButton"
            android:layout_width="91dp"
            android:layout_height="33dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="220dp"
            android:background="#00FF0000"
            android:rotation="90"
            android:text="Oblique"
            android:textColor="#00FF0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/QuadButton"
            android:layout_width="32dp"
            android:layout_height="118dp"
            android:layout_marginStart="128dp"
            android:layout_marginBottom="200dp"
            android:background="#00FF0000"
            android:rotation="-10"
            android:text="Quad"
            android:textColor="#00FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/GroinButton"
            android:layout_width="23dp"
            android:layout_height="77dp"
            android:layout_marginStart="160dp"
            android:layout_marginBottom="258dp"
            android:background="#00FF0000"
            android:rotation="-10"
            android:text="Groin"
            android:textColor="#00FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/TrapButton"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="150dp"
            android:background="#00FF0000"
            android:text="Traps"
            android:textColor="#00FF0000"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/TricepButton"
            android:layout_width="40dp"
            android:layout_height="68dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="70dp"
            android:background="#00FF0000"
            android:rotation="-25"
            android:text="Tricep"
            android:textColor="#00FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BForearmButton"
            android:layout_width="25dp"
            android:layout_height="74dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="363dp"
            android:background="#00FF0000"
            android:rotation="-30"
            android:text="ForearmBack"
            android:textColor="#00FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/ScapButton"
            android:layout_width="23dp"
            android:layout_height="75dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="170dp"
            android:background="#00FF0000"
            android:text="Scap"
            android:textColor="#00FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/LatButton"
            android:layout_width="44dp"
            android:layout_height="122dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="123dp"
            android:background="#00FF0000"
            android:text="Lat"
            android:textColor="#00FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/GluteButton"
            android:layout_width="48dp"
            android:layout_height="65dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="138dp"
            android:background="#00FF0000"
            android:text="Glute"
            android:textColor="#00FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/HamstringButton"
            android:layout_width="58dp"
            android:layout_height="96dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="210dp"
            android:background="#00FF0000"
            android:text="Hamstring"
            android:textColor="#00FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/CalfButton"
            android:layout_width="56dp"
            android:layout_height="91dp"
            android:layout_marginEnd="105dp"
            android:layout_marginBottom="80dp"
            android:background="#00FF0000"
            android:text="Calf"
            android:textColor="#00FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>